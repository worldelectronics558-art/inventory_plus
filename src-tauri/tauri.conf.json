{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "inventoryplus",
  "version": "0.1.0",
  "identifier": "com.inventoryplus.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Inventory Plus",
        "width": 1280,
        "height": 680,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        {
          "identifier": "dialog-and-fs-caps",
          "description": "Capabilities for using dialogs and file system operations.",
          "windows": ["main"],
          "permissions": [
            "fs:default"
          ]
        }
      ]
    }
  },
  "plugins": {
    "fs": {}
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}